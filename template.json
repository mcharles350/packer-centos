{
  "description" : "CentOS7 AMI 2016.09.0 HVM",
  "min_packer_version" : "0.12.1",

  "_comment": "Building CentOS7 with Puppet Enterprise AMI for corporate purposes only!!",
  "builders" : [
    {
      "type" : "amazon-ebs",

      "access_key" : "{{user `aws_access_key`}}",
      "secret_key" : "{{user `aws_secret_key`}}",

      "ami_virtualization_type" : "hvm",
      "force_deregister": true,
      "encrypt_boot": false,

      "associate_public_ip_address" : false,
      "region" : "{{user `region`}}",
	    "vpc_id" : "{{user `vpc_id`}}",
	    "subnet_id" : "{{user `subnet_id`}}",
      "availability_zone" : "{{user `availability_zone`}}",
      "security_group_id" : "{{user `security_group`}}",

      "source_ami_filter": {
        "filters": {
        "virtualization-type": "hvm",
        "name": "*CentOS Linux 7 x86_64 HVM EBS*",
        "root-device-type": "ebs"
      },
        "owners": ["679593333241"],
        "most_recent": true
      },

      "instance_type" : "t2.medium",
      "launch_block_device_mappings"  : [
        {
            "device_name" : "/dev/sda1",
            "volume_size" : 50,
            "volume_type" : "gp2",
            "delete_on_termination" : true
        }
      ],

      "communicator" : "ssh",
      "ssh_pty" : true,
      "ssh_timeout" : "20m",
      "ssh_username" : "centos",
      "ssh_private_ip"  : true,
      "temporary_key_pair_name" : "{{user `temporary_key_pair_name`}}",
      "shutdown_behavior" : "stop",

      "run_tags"  : {
        "Name" : "CentOS7-AP-GOLD-pe-{{isotime \"2006-01-02\"}}",
        "Cost Center" : "N/A",
        "Customer Facing" : "No",
        "Environment" : "QA",
        "Role" : "AMI",
        "Service" : "AMI",
        "Support Team" : "techgssserver@ap.org",
        "OS" : "CentOS 7"
      },

      "tags"  : {
        "Name" : "CentOS7-AP-GOLD-pe-{{isotime \"2006-01-02\"}}",
        "Cost Center" : "N/A",
        "Customer Facing" : "No",
        "Environment" : "QA",
        "Role" : "AMI",
        "Service" : "AMI",
        "Support Team" : "techgssserver@ap.org",
        "OS" : "CentOS 7"
      },

      "ami_description" : "Centos 7 pre-baked AMI build w/ Puppet Enterprise",

      "ami_name" : "CentOS7-AP-GOLD-pe-{{isotime \"2006-01-02\"}}",
      "ami_regions" : [
          "us-west-2",
          "eu-west-1"
      ],

      "ami_users" : [
        "720322524327",
        "838870929816",
        "222259241209",
        "557187967306",
        "576439789282",
        "959162376654",
        "656041960331",
        "198401342403",
        "134056038641",
        "903501326418",
        "185351644654",
        "201356851952",
        "304498741827",
        "882018314208",
        "462561078695",
        "699694540698"
      ]
    }
  ],

  "provisioners": [
    {
      "type"  : "file",
      "source"  : "scripts/client.json",
      "destination" : "~/client.json"
    },
    {
      "type"  : "file",
      "source"  : "scripts/api.json",
      "destination" : "~/api.json"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}",
      "type" : "shell",
      "script" : "scripts/script-pe-aug.sh"
    }
  ]
}
